{% extends 'layout.twig' %}
{% block body %}

<form id="editForm" action="/news/save/?id={{ article.id }}" method="post" class="form-group">
    <div class="form-error alert-danger">{{ articleErrors.titleError.getMessage }}</div>
    <input id="inputTitle" type="text" name="title" placeholder="Название" value="{{article.title}}" class="form-control">
    <div class="form-error alert-danger">{{ articleErrors.commentText.getMessage }}</div>
    <textarea id="inputArticle" name="text" type="text" rows="10" class="form-control">{{article.text}}</textarea>
    <button type="submit" name="submit" class="btn btn-success">редактировать</button>
</form>
{% endblock %}